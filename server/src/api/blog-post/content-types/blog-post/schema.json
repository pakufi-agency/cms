{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "BlogPost",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "PostMetaInfo": {
      "displayName": "PostMetaInfo",
      "type": "component",
      "repeatable": false,
      "component": "common.post-meta-info",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    }
  }
}
